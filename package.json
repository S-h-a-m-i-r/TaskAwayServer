{
  "name": "TaskAwayServer",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "debug": "node --inspect-brk server.js",
    "debug-dev": "nodemon --inspect server.js",
    "build": "npm install --production",
    "format": "prettier --write .",
    "lint": "eslint",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:scheduler": "node test-scheduler-comprehensive.js",
    "test:scheduler:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/services/schedulerService.test.js",
    "test:scheduler:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration/scheduler.test.js"
  },
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.4.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "openai": "^4.10.0",
    "puppeteer": "^24.20.0",
    "socket.io": "^4.8.1",
    "stripe": "^18.5.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.31.0",
    "eslint": "8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^30.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
