# Alternative: Use Gmail with App Password
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_app_password

# Application URLs
BASE_URL=http://localhost:3000
FRONTEND_BASE_URL=http://localhost:3001

# Environment
NODE_ENV=development 